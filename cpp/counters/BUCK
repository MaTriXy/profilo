        profilo_path("cpp/test/counters:procfs"),
    ],
    visibility = [
        "PUBLIC",
    ],
    deps = [
        profilo_path("cpp/logger/buffer:buffer"),
        profilo_path("cpp/util:util"),
        profilo_path("cpp:profilo"),
        profilo_path("deps/fb:fb"),
    ],
    exported_deps = [
